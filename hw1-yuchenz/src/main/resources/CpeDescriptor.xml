<?xml version="1.0" encoding="UTF-8"?>
<cpeDescription xmlns="http://uima.apache.org/resourceSpecifier">
    <collectionReader>
        <collectionIterator>
            <descriptor>
                <import location="../java/descriptors/HuskieGeneFileSystemReader.xml"/>
            </descriptor>
            <configurationParameterSettings>
                <nameValuePair>
                    <name>InputFile</name>
                    <value>
                        <string>src/main/data/sample.in</string>
                    </value>
                </nameValuePair>
            </configurationParameterSettings>
        </collectionIterator>
    </collectionReader>
    
    <casProcessors casPoolSize="3" processingUnitThreadCount="1">
    	<casProcessor deployment="integrated" name="Gene Input Sentence Annotator">
			<descriptor>
                <import location ="../java/descriptors/GeneInputSentenceAnnotator.xml"/>
            </descriptor>
    	</caseProcessor>
    	
    	<casProcessor deployment="integrated" name="Huskie Gene Annotator">
			<descriptor>
                <import location ="../java/descriptors/HuskieGeneAnnotator.xml"/>
            </descriptor>
    	</caseProcessor>
    	
    </casProcessors>
    
    
    
    <cpeConfig>
        <numToProcess>-1</numToProcess>
        <deployAs>immediate</deployAs>
        <checkpoint batch="0" time="300000ms"/>
        <timerImpl/>
    </cpeConfig>
</cpeDescription>
